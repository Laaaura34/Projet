package dossier;

import java.util.Scanner;
import java.util.Set;
import java.util.ArrayList;
import java.util.Collections;
import java.util.HashSet;
import java.util.List;
import java.util.Random;

public class mots {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Veuillez saisir un mot :");
		String str = sc.nextLine();
		
		
		int trs= str.length();
		
		System.out.println(
                "Il y a " + trs + " caractères dans le mot " + str );
		
		
		int calcul = trs - ((int) (trs*0.3));
		System.out.println(
				"On enleve 30% du nombre de caractéres, il doit nous rester "+ calcul+ " caractères");
		
		//Met nombres aléatoires dans une liste
		List<Integer> liste = new ArrayList<Integer>();
		
			while (liste.size()<calcul) {
				Random random = new Random();
				int nb = random.nextInt(trs);
				liste.add(nb);
				//Supprime les doublons dans la liste
				Set set = new HashSet() ;
		        set.addAll(liste) ;
		        liste = new ArrayList(set) ;   
					
		}			
		// Trie la liste par ordre croissant    
		Collections.sort(liste);		
		// Affiche place des caractères à garder	
		System.out.println(liste);		
		
		// Ajoute les caractères à garder dans un String
		StringBuilder sbf = new StringBuilder("");
		for (int i=0; i<calcul; i++) {
			int a= liste.get(i);
			sbf.append(str.charAt(a));				
			
		}
		System.out.println("Voici notre nouveau mot: "+ sbf );
		
	
				
	}	
		
		
	}
